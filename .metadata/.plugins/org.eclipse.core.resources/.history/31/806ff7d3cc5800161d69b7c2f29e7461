package MainCommands;

import org.bukkit.Bukkit;
import org.bukkit.ChatColor;
import org.bukkit.command.Command;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;

public class Item extends Command{

	public Item(String name) {
		super(name);
	}

	@Override
	public boolean execute(CommandSender sender, String label, String[] args) {
		Player player = (Player)sender;
		
		sender.sendMessage("It worked");
		
		String keyWord = "#item";
		String totalMessage = "";
		
		for(String arg: args){
			if(arg.equalsIgnoreCase(keyWord)){
				totalMessage += player.getInventory().getItemInHand().toString();
			}else{
				totalMessage += arg + " ";
			}
		}
		
		Bukkit.broadcastMessage(totalMessage);
		
		return true;
	}
}// End of class
