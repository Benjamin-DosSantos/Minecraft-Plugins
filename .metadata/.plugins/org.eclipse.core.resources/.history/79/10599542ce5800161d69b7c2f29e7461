package MainCommands;

import org.bukkit.Bukkit;
import org.bukkit.ChatColor;
import org.bukkit.command.Command;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.inventory.ItemStack;
import org.bukkit.inventory.PlayerInventory;
import org.bukkit.inventory.meta.ItemMeta;

public class Item extends Command{

	public Item(String name) {
		super(name);
	}

	@Override
	public boolean execute(CommandSender sender, String label, String[] args) {
		Player player = (Player)sender;
		
		PlayerInventory playerInventory = player.getInventory();
		ItemStack mainHandItem = playerInventory.getItemInMainHand();
		
		if(mainHandItem == null){
			sender.sendMessage(ChatColor.BLUE + "[Item Info]" + ChatColor.RED + "You have no item in your main hand!");
			return false;
		}
		
		ItemMeta mainItemMeta = mainHandItem.getItemMeta();
		
		if(mainItemMeta.hasDisplayName()){
			String ItemName = mainItemMeta.n
		}else{
			String ItemName = mainItemMeta.getDisplayName();
		}
		
		sender.sendMessage("It worked");
		
		String keyWord = "#item";
		String totalMessage = "";
		
		for(String arg: args){
			if(arg.equalsIgnoreCase(keyWord)){
				totalMessage += ItemName;
			}else{
				totalMessage += arg;
			}
			totalMessage += " ";
		}
		
		Bukkit.broadcastMessage(totalMessage);
		
		return true;
	}
}// End of class
