package main;

import org.bukkit.Bukkit;
import org.bukkit.Material;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.HumanEntity;
import org.bukkit.entity.Player;
import org.bukkit.inventory.Inventory;
import org.bukkit.inventory.InventoryHolder;
import org.bukkit.inventory.ItemStack;

public class featherGUI {
	public Inventory inv;
	
	public void openGUI(CommandSender p){
	    //format: null, size of inventory (must be divisible by 9), "GUI name"
	    inv = createNewInv(null, 9, "Fast Ban");
	    populateGUI();
	    ((HumanEntity) p).openInventory(inv);
	}// end of openGUI
	
	public void populateGUI(){
		inv.setItem(0, new ItemStack(Material.PAPER));
		inv.setItem(1, new ItemStack(Material.DIAMOND));
		inv.setItem(2, new ItemStack(Material.DIAMOND));
		inv.setItem(3, new ItemStack(Material.DIAMOND));
		inv.setItem(4, new ItemStack(Material.DIAMOND));
		inv.setItem(5, new ItemStack(Material.DIAMOND));
		inv.setItem(6, new ItemStack(Material.DIAMOND));
		inv.setItem(7, new ItemStack(Material.DIAMOND));
		inv.setItem(8, new ItemStack(Material.PAPER));
	}// End of populateGUI method
	
	public Inventory createNewInv(InventoryHolder inventoryOwner, int size, String inventoryName){
		return Bukkit.createInventory(inventoryOwner, size, inventoryName);
	};
}// End of class
